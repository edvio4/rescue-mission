<h1>New Question</h1>

<%= form_for(@question) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Question Title" %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Question Description" %>
  </p>

  <%= render 'form' %>

<% end %>

<%= link_to 'Back', questions_path %>
