<p id="notice"><%= notice %></p>

<h1><%= @question.title %></h1>
<hr>
<div class="">
  <p>
    <%= @question.description %>
  </p>

</div>
<%= link_to 'Edit Question', edit_question_path(@question) %><br>
<%= link_to 'Delete Question', @question, method: :delete, data: { confirm: 'Are you sure?' } %>
<hr>
<h2>Answers</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><p><%= answer.description %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Add Answer', new_question_answer_path(@question.id) %>
</p>

<p>
  <%= link_to 'Back to Questions', questions_path %>
</p>
